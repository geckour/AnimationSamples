<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context="sample.satsukies.transitionsamples.MainActivity"
  >

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
      android:id="@+id/button_simple_transition"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:text="Simple Transition"
      />

    <Button
      android:id="@+id/button_simple_shared"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/button_simple_transition"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="16dp"
      android:text="Simple Shared Element Transition"
      />

    <Button
      android:id="@+id/button_simple_shared_code"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/button_simple_shared"
      android:layout_centerHorizontal="true"
      android:text="Simple Shared Element Transition \nwith codes"
      />

    <Button
      android:id="@+id/button_exclude_shared"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/button_simple_shared_code"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="16dp"
      android:text="Simple Shared Element Transition \nwithout statusbar"
      />

  </RelativeLayout>

</layout>